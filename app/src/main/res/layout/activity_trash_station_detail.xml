<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.trashStationDetail.TrashStationDetailActivity">
    
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/ab_detail_app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        
        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/ctl_collapsing_toolbar_layout"
            style="?attr/collapsingToolbarLayoutMediumStyle"
            android:layout_width="match_parent"
            android:layout_height="?attr/collapsingToolbarLayoutMediumSize">
            
            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/mt_detail_tool_bar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:elevation="0dp"
                app:title="Trash Station A"
                app:navigationIcon="@drawable/back_navigation_logo"/>
        </com.google.android.material.appbar.CollapsingToolbarLayout>
        
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_detail_address_title_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/ab_detail_app_bar_layout"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/iv_detail_address_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/location_logo"
            android:layout_marginStart="22dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:id="@+id/txt_detail_address_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Address"
            android:textSize="22sp"
            android:textColor="?attr/colorOnSurface"
            android:layout_marginStart="15dp"
            app:layout_constraintStart_toEndOf="@id/iv_detail_address_logo"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/txt_detail_address_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Jl. Ganesa No.10, Lb. Siliwangi, Kecamatan Coblong, Kota Bandung, Jawa Barat 40132"
        android:textSize="14sp"
        android:textColor="?attr/colorOnSurfaceVariant"
        android:layout_marginHorizontal="61dp"
        app:layout_constraintTop_toBottomOf="@id/cl_detail_address_title_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_detail_open_hours_title_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/txt_detail_address_description"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/iv_detail_open_hours_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/clock_logo"
            android:layout_marginStart="22dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:id="@+id/txt_detail_open_hours_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Open Hours"
            android:textSize="22sp"
            android:textColor="?attr/colorOnSurface"
            android:layout_marginStart="15dp"
            app:layout_constraintStart_toEndOf="@id/iv_detail_open_hours_logo"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/txt_detail_open_hours_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="08.00 - 21.00"
        android:textSize="14sp"
        android:textColor="?attr/colorOnSurfaceVariant"
        android:layout_marginHorizontal="61dp"
        app:layout_constraintTop_toBottomOf="@id/cl_detail_open_hours_title_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_detail_capacity_title_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/txt_detail_open_hours_description"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/iv_detail_capacity_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/trash_24_logo"
            android:layout_marginStart="22dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:id="@+id/txt_detail_capacity_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Capacity"
            android:textSize="22sp"
            android:textColor="?attr/colorOnSurface"
            android:layout_marginStart="15dp"
            app:layout_constraintStart_toEndOf="@id/iv_detail_capacity_logo"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/txt_detail_capacity_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="75%"
        android:textSize="14sp"
        android:textColor="?attr/colorOnSurfaceVariant"
        android:layout_marginHorizontal="61dp"
        app:layout_constraintTop_toBottomOf="@id/cl_detail_capacity_title_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/btn_detail_show_qr_code"
        android:layout_width="382dp"
        android:layout_height="wrap_content"
        android:text="Show QR Code"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        style="@style/Widget.Material3.Button.OutlinedButton"/>

</androidx.constraintlayout.widget.ConstraintLayout>