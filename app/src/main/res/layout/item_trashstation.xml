<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp">

    <!-- The inner ConstraintLayout (original) -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_trash_station_list_container"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:background="@drawable/list_item_shape"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/txt_list_trash_station_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/circle_text_view_shape"
            android:gravity="center"
            android:text="C"
            android:textColor="?attr/colorOnPrimaryContainer"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <TextView
            android:id="@+id/txt_list_trash_station_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Trash Station"
            android:textColor="?attr/colorOnSurface"
            android:textSize="16sp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toEndOf="@id/txt_list_trash_station_logo"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txt_list_trash_station_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="C"
            android:textSize="16sp"
            android:textColor="?attr/colorOnSurface"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toEndOf="@id/txt_list_trash_station_title"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txt_list_trash_station_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="200m"
            android:textSize="14sp"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:layout_marginStart="15dp"
            app:layout_constraintStart_toEndOf="@id/txt_list_trash_station_logo"
            app:layout_constraintTop_toBottomOf="@id/txt_list_trash_station_title" />

        <TextView
            android:id="@+id/txt_list_trash_station_divider"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="|"
            android:textSize="14sp"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:layout_marginStart="5dp"
            app:layout_constraintStart_toEndOf="@id/txt_list_trash_station_distance"
            app:layout_constraintTop_toBottomOf="@id/txt_list_trash_station_title" />

        <TextView
            android:id="@+id/txt_list_trash_station_availability"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Available"
            android:textSize="14sp"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:layout_marginStart="5dp"
            app:layout_constraintStart_toEndOf="@id/txt_list_trash_station_divider"
            app:layout_constraintTop_toBottomOf="@id/txt_list_trash_station_title" />

        <ImageView
            android:id="@+id/iv_list_trash_station_arrow_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow_right_list_logo"
            android:layout_marginEnd="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
